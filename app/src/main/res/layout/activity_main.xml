<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".SetTextOnEditTextActivity">

    <TextView
        android:id="@+id/text_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Hello World!"
        android:textSize="26sp"
        android:layout_marginTop="150dp"
        app:layout_constraintBottom_toTopOf="@+id/text_et"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent" />
    <EditText
        android:id="@+id/text_et"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:hint="@string/enter_your_text"
        android:inputType="text"
        app:layout_constraintTop_toBottomOf="@+id/text_tv"
        app:layout_constraintLeft_toLeftOf="@+id/text_tv"
        app:layout_constraintRight_toRightOf="@+id/text_tv"
        app:layout_constraintBottom_toTopOf="@+id/set_btn"/>
    <Button
        android:id="@+id/set_btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/set_text"
        android:layout_marginTop="50dp"
        app:layout_constraintLeft_toLeftOf="@+id/text_et"
        app:layout_constraintRight_toRightOf="@+id/text_et"
        app:layout_constraintTop_toBottomOf="@+id/text_et"
/>

</androidx.constraintlayout.widget.ConstraintLayout>